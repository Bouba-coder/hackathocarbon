// shemat Formation
model Formation {
  id      Int    @id @default(autoincrement())
  nom     String
  diplome String
  niveau  String
  // relation avec le model Consultant
  //consultant Consultant[]
  //relation with user with role rh
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

// shemat Consultant
model Consultant {
  id                  Int           @id @default(autoincrement())
  email               String        @unique
  role                Role          @default(CONSULTANT)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  metier              String
  secteur             String
  disponibilite       Disponibilite
  perimetre           String
  competences         String[]
  experiences         String[]
  formations          String[]
  //clients relation
  actuel_entreprise   Client        @relation(fields: [actuel_entrepriseId], references: [id])
  actuel_entrepriseId Int
  level               Int
  salaire             Int
  // relation avec le model User
  user                User          @relation(fields: [userId], references: [id])
  userId              Int
}

// shemat article
model Article {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  category String
  author   User   @relation(fields: [authorId], references: [id])
  authorId Int // relation scalar field  (used in the `@relation` attribute above)
}
