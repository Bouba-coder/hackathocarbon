// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  firstName  String
  lastName   String
  password   String
  role       Role         @default(CONSULTANT)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Consultant Consultant[]
}

enum Disponibilite {
  IMMEDIAT
  TROIS_MOIS
  SIX_MOIS
}

enum Role {
  CONSULTANT
  ADMIN
  RH
}

// shemat Client
model Client {
  id         Int          @id @default(autoincrement())
  contact    String      
  nom        String
  secteur    String
  // relation avec le model Consultant
  consultant Consultant[]
}

// shemat Experience
model Experience {
  id             Int          @id @default(autoincrement())
  nom_entreprise String
  poste          String
  // relation avec le model Consultant
  consultant     Consultant[]
}

// shemat Formation
model Formation {
  id         Int          @id @default(autoincrement())
  nom        String
  diplome    String
  niveau     String
  // relation avec le model Consultant
  consultant Consultant[]
}

// shemat Consultant
model Consultant {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  role          Role          @default(CONSULTANT)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  metier        String
  secteur       String
  disponibilite Disponibilite
  perimetre     String
  competences   String[]
  experiences   Experience[]
  formations    Formation[]
  clients       Client[]
  level         Int
  salaire       Int
  // relation avec le model User
  user          User          @relation(fields: [userId], references: [id])
  userId        Int
}
