generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// shemat User -- on change le role users pour que le rh soit rh
model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  firstName  String
  lastName   String
  password   String
  role       Role         @default(CONSULTANT)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Consultant Consultant[]
  Article    Article[]
  Formation  Formation[]
}

enum Disponibilite {
  IMMEDIAT
  TROIS_MOIS
  SIX_MOIS
}

enum Role {
  CONSULTANT
  ADMIN
  RH
}

// shemat Client
model Client {
  id         Int          @id @default(autoincrement())
  contact    String
  nom        String
  secteur    String
  // relation avec le model Consultant
  consultant Consultant[]
}

